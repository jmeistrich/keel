model Person {
    fields {
        name Text
        mother Person? @relation(children)
        children Person[]
    }

    actions {
        create createPerson() with (name, mother.id?)
        list children(mother.id?, mother.name?) {
            @orderBy(name: asc)
        }
        list mothersOf(children.id?, children.name?) {
            @orderBy(name: asc)
        }
    }

    @permission(
        expression: true,
        actions: [create, get, list]
    )
}
